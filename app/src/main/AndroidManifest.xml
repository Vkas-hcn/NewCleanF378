<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".GoShow"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewClean">
        <activity
            android:name=".NcNameFall"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <data
                    android:host="com.desolation.spreads.reach"
                    android:scheme="com.desolation.spreads.reach" />
            </intent-filter>
        </activity>


        <activity android:name=".NcMaster"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="true"/>
        <activity android:name=".NcEnd"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".qlwj.presentation.NcTrans"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".yy.NcAppMc"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity-alias
            android:name="com.desolation.spreads.reach.NcName"
            android:enabled="false"
            android:exported="true"
            android:targetActivity=".NcNameFall">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity android:name=".NcWen"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>

        <activity android:name=".cf.NcChong"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity
            android:name=".NcJump"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>
        <activity android:name=".NcNet"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
    </application>

</manifest>