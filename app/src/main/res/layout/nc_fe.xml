<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file"
    android:background="#0B54D8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0B54D8"
            android:drawableStart="@drawable/back_icon_b"
            android:drawablePadding="8dp"
            android:paddingStart="12dp"
            android:gravity="center|start"
            android:text="Large files"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="11dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_direction_file"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="All types"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_direction_file"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingHorizontal="60dp"
                android:text="All Size"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_direction_file"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="All Time"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_app_list"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                tools:listitem="@layout/item_file_clean"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="38dp"
                android:backgroundTint="#0F54DC"
                android:enabled="false"
                app:cornerRadius="10dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="bottom"
                android:paddingVertical="10dp"
                android:text="Delete"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"/>

        </FrameLayout>


    </LinearLayout>
    <include
        android:id="@+id/inLoad"
        layout="@layout/kuang_load" />
</FrameLayout>
